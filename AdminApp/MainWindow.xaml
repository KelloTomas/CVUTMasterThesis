<Window x:Class="AdminApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="725">
    <Grid Margin="0,40,0,0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="0">
			<Button Content="Aplikacie" Click="ApplicationButtonClick" />
			<Button Content="Uzivatelia" Click="ClientsButtonClick"/>
			<Button Content="Zoznam menu" Click="ListMenuButtonClick"/>
			<Button Content="Objednavky"  Click="OrdersButtonClick"/>
		</StackPanel>
		
		<Frame NavigationUIVisibility="Hidden" Grid.Column="1" x:Name="frame">

		</Frame>
	</Grid>
</Window>
