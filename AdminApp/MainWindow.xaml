			<Button x:Name="App" Content="Podaplikácie" Click="ApplicationButtonClick" Style="{StaticResource NavbarBtnStyle}" Margin="0,20,0,0" />
			<Button x:Name="TerminalService" Content="Správa terminálov" Click="TerminalService_Click" Style="{StaticResource NavbarBtnStyle}" />
			<Button x:Name="Client" Content="Užívatelia" Click="ClientsButtonClick" Style="{StaticResource NavbarBtnStyle}"/>
			<Button x:Name="Soups" Content="Polievky" Click="MenuItemButtonClick" Style="{StaticResource NavbarBtnStyle}"/>
			<Button x:Name="Meals" Content="Hl. jedlá" Click="MenuItemButtonClick" Style="{StaticResource NavbarBtnStyle}"/>
			<Button x:Name="Deserts" Content="Dezerty" Click="MenuItemButtonClick" Style="{StaticResource NavbarBtnStyle}"/>
			<Button x:Name="Menu" Content="Jedálny lístok" Click="ListMenuButtonClick" Style="{StaticResource NavbarBtnStyle}"/>
			<Button x:Name="Order" Content="Objednávky"  Click="OrdersButtonClick" Style="{StaticResource NavbarBtnStyle}"/>
			<Button x:Name="Close" Content="Zatvoriť"  Click="Close_Click" Style="{StaticResource NavbarBtnStyle}"/>
		</StackPanel>

		<Frame Grid.Row="1" NavigationUIVisibility="Hidden" Grid.Column="1" x:Name="frame" Margin="0,10,0,0"/>

		<Grid Grid.Row="1"  Grid.Column="1" x:Name="CanteenPic" >
