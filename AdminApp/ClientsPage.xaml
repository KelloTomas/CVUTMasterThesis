<Page x:Class="AdminApp.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdminApp"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="UsersPage">

    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="30"/>
		</Grid.RowDefinitions>
		<DataGrid Grid.ColumnSpan="2" x:Name="clientsDataGrid" />
		<Button Grid.Row="1" Grid.Column="0" Content="Save" Click="SaveBtnClick" />
		<Button Grid.Row="1" Grid.Column="1" Content="Cancel" Click="CancelBtnClick" />
	</Grid>
</Page>
